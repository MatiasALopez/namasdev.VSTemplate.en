@using namasdev.Web.Helpers;
@using MyApp.Web.Portal.Controllers;
@using MyApp.Web.Portal.Metadata.Views;
@{
    ViewBag.Title = "Forgot my password";
}
<section id="loginForm">
    <div class="mt-3">
        @Html.AlertSuccess("An email has been sent to reset your password")
    </div>
    <p class="mt-3">
        <a href="@Url.Action(nameof(AccountController.Login), AccountController.NAME)">Back</a>
    </p>
</section>
