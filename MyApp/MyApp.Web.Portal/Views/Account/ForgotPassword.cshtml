@using namasdev.Web.Helpers;
@using MyApp.Web.Portal.Controllers;
@model MyApp.Web.Portal.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot my password";
}
<section id="loginForm">
    <form action="@Url.Action()" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(excludePropertyErrors: false)
        @Html.MessageError()
        <p class="mx-n3 font-weight-bold text-center">In order to reset your password you must enter your email address</p>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Send" />
    </form>
    <p class="mt-3">
        <a href="@Url.Action(nameof(AccountController.Login), AccountController.NAME)">Back</a>
    </p>
</section>
