@model MyApp.Web.Portal.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<section id="loginForm">
    <form action="@Url.Action()" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(excludePropertyErrors: false)
        @Html.HiddenFor(m => m.Code)
        @Html.HiddenFor(m => m.Email)
        <p class="mx-n3 font-weight-bold text-center">Set your new password</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Reset" />
    </form>
</section>
