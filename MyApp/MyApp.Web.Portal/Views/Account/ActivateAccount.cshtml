@using MyApp.Web.Portal.Controllers; 
@model MyApp.Web.Portal.ViewModels.ActivateAccountViewModel
@{
    ViewBag.Title = "Activate account";
}
<section id="loginForm">
    @using (Html.BeginForm(nameof(AccountController.ActivateAccount), AccountController.NAME, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(excludePropertyErrors: false)
        @Html.HiddenFor(m => m.Code)
        <p class="mx-n3 font-weight-bold text-center">In order to activate your account you must set a password</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Activate" />
    }
</section>
